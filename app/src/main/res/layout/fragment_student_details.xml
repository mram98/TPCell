<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:background="@color/colorPrimary"
                android:elevation="5dp">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="0dp"
                    android:clickable="true"
                    android:elevation="7dp"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle_grey_24dp" />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimaryDark"
                    android:scaleType="centerCrop" />

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name_of_student" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_enroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_enroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enroll_of_student" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_of_student" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_of_student" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_10th_aggregate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_10th_aggregate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/_10th_aggregate" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_12th_aggregate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_12th_aggregate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/_12th_aggregate" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/student_layout_college_aggregate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/student_college_aggregate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/college_aggregate" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp">

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/student_submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/submit" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>